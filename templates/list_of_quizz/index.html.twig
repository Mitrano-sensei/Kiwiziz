{% extends 'base.html.twig' %}

{% block title %}
List of all quizz
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Creator username</th>
            </tr>
        </thead>
        <tbody>
            {% for quizz in allQuizz %}
                <tr>
                    <td>{{ quizz.title }}</td>
                    <td>{{ quizz.author.username }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_home') }}">Back to homepage</a>
{% endblock %}
