<div class="app_bar">
	<a href="{{ path('app_home') }}" class="logo-link">
		<img src="src/logo.png" alt="logo" class="logo">
	</a>
	<div class="profil-container">
		{% if userConnected %}
			<a alt="profil" href "profil" class="profil-link">
				<img src="src/login.png" alt="logo" class="profil-logo">
			</a>
			<a alt="signout" href="{{ path('app_logout') }}" class="signup">Sign out</a>
		{% else %}
			<a alt="signin" href="{{ path('app_login') }}" class="signin">Sign in</a>
			<span class="profil-separator">/</span>
			<a alt="signup" href="{{ path('app_register') }}" class="signup">Sign up</a>
		{% endif %}
	</div>
</div>

